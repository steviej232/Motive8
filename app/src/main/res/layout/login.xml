<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/login_title"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        android:shadowColor="#242E35"
        android:shadowDx="-1"
        android:shadowDy="-1"
        android:shadowRadius="2" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin ="16dp">

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_mail_black_24dp"
            android:drawableTint="@color/font"
            android:drawablePadding="8dp"
            android:inputType="textEmailAddress"
            android:hint="@string/email_address"
            android:textColor="@color/font"
            android:ems="10" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_lock_black_24dp"
            android:drawableTint="@color/font"
            android:drawablePadding="8dp"
            android:inputType="textPassword"
            android:hint="@string/password"
            android:textColor="@color/font"
            android:ems="10" />
    </LinearLayout>

    <Button
        android:id="@+id/submit_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:alpha=".70"
        android:textColor="@color/font"
        android:text="@string/log_in"
        android:textSize="@dimen/button_font_size" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textColor="@color/font"
            android:textSize="@dimen/text_font_size"
            android:text="@string/dont_have_an_account" />

        <TextView
            android:id="@+id/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textAppearance="@id/underline"
            android:textColor="@color/font"
            android:textSize="@dimen/text_font_size"
            android:text="@string/sign_up" />
    </LinearLayout>
</LinearLayout>