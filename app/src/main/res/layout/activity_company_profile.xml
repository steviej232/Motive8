<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_company_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sjohns70.motive8.CompanyProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/companyName"
            android:layout_marginTop="12dp"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:layout_centerInParent="false"
            android:layout_below="@+id/companyName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_alignEnd="@+id/companyName"
            android:id="@+id/businessDescription"
            android:layout_alignStart="@+id/companyName"
            android:gravity="center_horizontal" />

            <ListView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:id="@+id/rewardsList"/>
    </LinearLayout>
</RelativeLayout>
